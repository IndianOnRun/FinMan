<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newbill_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >
    	
    <EditText  
         android:id="@+id/newbill_itemName"  
         android:layout_width="0sp" 
         android:layout_height="fill_parent"
         android:layout_weight="2"
         android:gravity="center_vertical"
         android:padding="10dp"  
         android:textSize="16sp"
         android:hint="@string/newbill_itemName" />
    
    <EditText 
         android:id="@+id/newbill_itemPrice"
         android:layout_width="0sp"     
         android:layout_height="fill_parent" 
         android:layout_weight="1" 
         android:gravity="center"
         android:padding="10dp"  
         android:textSize="16sp" 
         android:inputType="number"
         android:hint="@string/newbill_itemPrice" />
    
    <ImageButton
        android:id="@+id/newbill_itemdelete"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:contentDescription="@string/delete"
        android:onClick="removeItemOnClickHandler"
        android:src="@drawable/content_discard" />

</LinearLayout>